<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_constraintlayout"
    android:background="@drawable/gradient">

    <Button
        android:id="@+id/button"
        android:layout_width="137dp"
        android:layout_height="85dp"
        android:text="Profile"
        android:textSize="16sp"
        app:icon="@drawable/ic_baseline_person_24"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="137dp"
        android:layout_height="85dp"
        android:onClick="homeScreen"
        android:text="Home"
        android:textSize="16sp"
        app:icon="@drawable/ic_baseline_home_24"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="137dp"
        android:layout_height="85dp"
        android:onClick="matchesScreen"
        android:text="Messages"
        android:textSize="12sp"
        app:icon="@drawable/ic_baseline_message_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="390dp"
        android:layout_height="651dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:windowSoftInputMode="adjustResize">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="View and Edit Profile"
                android:textColor="#FFEB3B"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/changeName"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Name"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/name"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5sp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHighlight="#FFEB3B" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Weight"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/weight"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5sp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Weight"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHighlight="#FFEB3B" />

            <TextView
                android:id="@+id/textView82"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Height"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <EditText
